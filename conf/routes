# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                           @controllers.Application.index()

#Admin panel

POST          /adminpanel                                 @controllers.AppUsers.loginRender()
GET           /adminpanel                                 @controllers.AppUsers.panelRender()
GET           /logout                                     @controllers.AppUsers.logout()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                               @controllers.Assets.versioned(path="/public", file: Asset)


#Staff

GET           /osoblje                                    @controllers.Persons.personsMain()
GET           /osoblje/dodajosobu                         @controllers.Persons.createPersonRender()
POST          /osoblje/dodajosobu                         @controllers.Persons.createPerson()
GET           /osoblje/listaosoba                         @controllers.Persons.listOfPersons()
GET           /osoblje/:personId                          @controllers.Persons.updatePersonRender(personId: Integer)
POST          /osoblje/:personId                          @controllers.Persons.updatePerson(personId: Integer)
GET           /osoblje/brisanje/:personId                 @controllers.Persons.deletePerson(personId: Integer)
DELETE        /osoblje/brisanje/:personId                 @controllers.Persons.deletePerson(personId: Integer)


#Certificates

GET           /certifikati                                @controllers.Certificates.certificateMain()
GET           /certifikati/dodajcertifikat                @controllers.Certificates.createCertificateRender()
POST          /certifikati/dodajcertifikat                @controllers.Certificates.createCertificate()
GET           /certifikati/listacertifikata               @controllers.Certificates.listOfCertificates()
GET           /certifikati/:certificateId                 @controllers.Certificates.updateCertificateRender(certificateId: Integer)
POST          /certifikati/:certificateId                 @controllers.Certificates.updateCertificate(certificateId: Integer)
GET           /certifikati/brisanje/:certificateId        @controllers.Certificates.deleteCertificate(certificateId: Integer)
DELETE        /certifikati/brisanje/:certificateId        @controllers.Certificates.deleteCertificate(certificateId: Integer)

#PersonsCertificates

GET           /osoblje/dodajcertifikat/:personId          @controllers.PersonCertificates.addPersonsCertificateRender(personId: Integer)
POST          /osoblje/dodajcertifikat/:personId          @controllers.PersonCertificates.addPersonsCertificate(personId: Integer)
POST          /osoblje/dodajcertifikat1/:personId          @controllers.PersonCertificates.addAndAddAnotherPersonsCertificate(personId: Integer)


#Companies

GET           /firme                                      @controllers.Companies.companyMain()
GET           /firme/dodajfirmu                           @controllers.Companies.createCompanyRender()
POST          /firme/dodajfirmu                           @controllers.Companies.createCompany()
GET           /firme/listafirmi                           @controllers.Companies.listOfCompanies()
GET           /firme/vlade                                @controllers.Companies.vlade()
GET           /firme/kantoni                              @controllers.Companies.kantoni()
GET           /firme/lokalnasamouprava                    @controllers.Companies.lokalnasamouprava()
GET           /firme/zavodi                               @controllers.Companies.zavodi()
GET           /firme/klinickicentri                       @controllers.Companies.klinickicentri()
GET           /firme/prehrambeniproizvodjaci              @controllers.Companies.prehrambeniproizvodjaci()
GET           /firme/velikamalaisrednjapreduzeca          @controllers.Companies.velikamalaisrednjapreduzeca()
GET           /firme/:companyId                           @controllers.Companies.updateCompanyRender(companyId: Integer)
POST          /firme/:companyId                           @controllers.Companies.updateCompany(companyId: Integer)
GET           /firme/brisanje/:companyId                  @controllers.Companies.deleteCompany(companyId: Integer)
DELETE        /firme/brisanje/:companyId                  @controllers.Companies.deleteCompany(companyId: Integer)

#Email
GET           /osoblje/mail/:personId                     @controllers.Emails.sendEmailRender(personId: Integer)
POST          /osoblje/mail/:personId                     @controllers.Emails.sendEmail(personId: Integer)
GET           /firma/grupnimail                           @controllers.Emails.sendGroupEmailRender()
POST          /firma/grupnimail                           @controllers.Emails.sendGroupEmail()

POST          /                                            @controllers.Emails.checkForExpiringCertificate()